# ProductSync Environment Configuration
# Copy this file to .env and fill in your actual values

# Flask settings
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database settings
DATABASE_URL=postgresql://username:password@localhost:5432/productsync

# Redis settings
REDIS_URL=redis://localhost:6379

# Discord settings
DISCORD_TOKEN=your-discord-bot-token-here
DISCORD_GUILD_ID=your-discord-guild-id-here

# Slack settings
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_SIGNING_SECRET=your-slack-signing-secret-here

# Notion settings
NOTION_TOKEN=your-notion-integration-token-here
NOTION_DATABASE_ID=your-notion-database-id-here

# JIRA settings
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your-jira-email@domain.com
JIRA_API_TOKEN=your-jira-api-token-here

# NLP settings
SPACY_MODEL=en_core_web_md
TRANSFORMERS_CACHE_DIR=./models

# Celery settings
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Priority scoring thresholds
PRIORITY_THRESHOLD=0.7
CLUSTER_MIN_SIZE=3

# Optional: Test database for testing
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/productsync_test 